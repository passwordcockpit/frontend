<div class="panel panel-default edit ">
    <div class="panel-heading">
        {{t 'Personal data'}}
        <div class="pull-right">
            <div class="btn-group">
                {{#link-to "users.index" class="edit btn btn-default btn-xs" }}
                    {{t 'Cancel'}} <i class="fas fa-times"></i>
                {{/link-to}}
            </div>
        </div>
    </div>
    <div class="panel-body">
        <form class="form-horizontal" {{action 'submit' on='submit' }}>

            <div class="form-group">
                <label class="control-label col-sm-2">
                    {{t 'Username'}}
                </label>
                <div class="col-sm-10">
                    {{form/form-text
                        type="text"
                        class='form-control'
                        name='username'
                        value=username 
                        isFormValid=isFormValid
                        showMessage=showMessage
                        validator=(validation-parameters
                                    required=true
                                    minLength=2
                                    maxLength=45
                                    )
                        }}
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">
                    {{t 'Password'}}
                </label>
                <div class="col-sm-10">
                    {{form/form-text
                        type='password' 
                        class='form-control'
                        id='actual_password'
                        name="actual_password"
                        value=password 
                        isFormValid=isFormValid
                        showMessage=showMessage
                        validator=(validation-parameters
                                    minLength=8
                                    maxLength=200
                                    type='password'
                                    )
                        }}
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">
                    {{t 'Name'}}
                </label>
                <div class="col-sm-10">
                    {{form/form-text
                        type="text"
                        class='form-control'
                        name='name'
                        value=name 
                        isFormValid=isFormValid
                        showMessage=showMessage
                        validator=(validation-parameters
                                    required=true
                                    minLength=1
                                    maxLength=45
                                    )
                        }}
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">
                    {{t 'Surname'}}
                </label>
                <div class="col-sm-10">
                     {{form/form-text
                        type="text"
                        class='form-control'
                        name='surname'
                        value=surname 
                        isFormValid=isFormValid
                        showMessage=showMessage
                        validator=(validation-parameters
                                    required=true
                                    minLength=1
                                    maxLength=45
                                    )
                        }}
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">
                    {{t 'Phone'}}
                </label>
                <div class="col-sm-10">
                    {{form/form-text
                        type="text"
                        class='form-control'
                        name='phone'
                        value=phone
                        isFormValid=isFormValid
                        showMessage=showMessage
                        validator=(validation-parameters
                                    minLength=1
                                    maxLength=45
                                    type='phone'
                                    )
                        }}
                </div>
            </div>
            <div class="form-group {{if errors.email 'has-error'}}">
                <label class="control-label col-sm-2">
                    {{t 'Email'}}
                </label>
                <div class="col-sm-10">
                    {{form/form-text
                        type="text"
                        class='form-control'
                        name='email'
                        value=email
                        isFormValid=isFormValid
                        showMessage=showMessage
                        validator=(validation-parameters
                                    required=true
                                    minLength=0
                                    maxLength=45
                                    type='email'
                                    )
                        }}
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">
                    {{t 'Enabled'}}
                </label>
                <div class="col-sm-10">
                    {{input type="checkbox" checked=enabled}}
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">
                    {{t 'Language'}}
                </label>
                <div class="col-sm-10">
                    {{log user}}
                    {{form/form-select
                            class='language-select form-control'
                            name='language'
                            isPowerSelect=false
                            selectOptions=userLanguages
                            value=language
                            isFormValid=isFormValid
                            showMessage=showMessage
                            printSelectValuesHandle=(action 'printSelectValuesHandle')
                            validator=(validation-parameters
                                    required=true
                                    minLength=2
                                    maxLength=2
                                    type='select'
                                    )
                        }}
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" name="submit" class="btn btn-primary">
                        {{t 'Save'}}
                        <i class="fa  fa-floppy-o"></i>
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>
{{yield}}