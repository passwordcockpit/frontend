<li class="edit-view">
    <div class="edit {{if errors.selectUser 'has-error'}}">
        <form {{action 'submit' folderId selectedUser on='submit' }}>
            <div class="user-select-container">
                {{#power-select 
                    selected=selectedUser
                    printSelectValuesHandle=(action 'printSelectValuesHandle')  
                    options=filteredUsers 
                    isFormValid=isFormValid
                    showMessage=showMessage
                    onchange=(action 'changeSelectedUser')
                    searchField="fullName"
                    validator=(validation-parameters
                        required=true
                        type='select'
                        )
                    as |user|}}
                    {{print-select-values-handle user (action 'printSelectValuesHandle')}}
                {{/power-select}}    
            </div>
            <label class="user-edit-container">
                {{input type="checkbox" id='access' checked=access}}{{t 'Manage' }}
            </label>
            <br>
            <div class="form-btn">
                <button class="btn btn-default btn-xs action-close" {{action 'cancel'}}>
                    {{t 'Cancel'}} <i class="fas fa-times"></i>
                </button>
                <button class="btn btn-primary btn-xs action-save">
                    {{t 'Add'}} <i class="fas fa-plus"></i>
                </button>
            </div>
            {{{display-errors errors.selectUser}}}
        </form>
    </div>
</li>