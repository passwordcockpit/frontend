<li class="edit-view">
    <div class="edit {{if this.errors.selectUser 'has-error'}}">
        <form class="form-folder-settings" {{action 'submit' this.folderId this.selectedUser on='submit' }}>
            <div class="folder-settings-container">
                <div class="user-select-container">
                    <PowerSelect @selected={{this.selectedUser}} @printSelectValuesHandle={{action "printSelectValuesHandle"}} @options={{this.filteredUsers}} @isFormValid={{this.isFormValid}} @showMessage={{this.showMessage}} @onChange={{action "changeSelectedUser"}} @searchField="fullName" @validator={{validation-parameters required=true type="select"}} as |user|>
                        {{print-select-values-handle user (action 'printSelectValuesHandle')}}
                    </PowerSelect>    
                </div>
                <label class="user-edit-container">
                    <Input @type="checkbox" @id="access" @checked={{this.access}} />{{t 'Manage' }}
                </label>
            </div>
            <div class="form-btn">
                <button class="btn btn-default btn-xs action-close" {{action 'cancel'}}>
                    {{t 'Cancel'}} <i class="fas fa-times"></i>
                </button>
                <button class="btn btn-primary btn-xs action-save" disabled="{{unless this.selectedUser true}}">
                    {{t 'Add'}} <i class="fas fa-plus"></i>
                </button>
            </div>
            {{{display-errors this.errors.selectUser}}}
        </form>
    </div>
</li>