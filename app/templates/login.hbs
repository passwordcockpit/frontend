<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <img class="logo-login" src="/assets/images/logo.svg" alt="login">
            <div class="login-panel panel panel-default">
                <div class="panel-body">
                    <form id="loginForm" class="form-horizontal" name="login" {{action 'submit' on='submit'}}>
                        <div class="form-group {{if this.errors.username 'has-error'}}">
                            <div class="col-sm-12">
                                <Form::FormText @type="text" @viewId="username" @class="form-control" @name="username" @placeholder={{t "Username"}} @value={{this.username}} @isFormValid={{this.isFormValid}} @showMessage={{this.showMessage}} />
                            </div>
                        </div>
                        <div class="form-group {{if this.errors.password 'has-error'}}">
                            <div class="col-sm-12">
                                <Form::FormText @type="password" @viewId="password" @class="form-control" @name="password" @placeholder={{t "Password"}} @value={{this.password}} @isFormValid={{this.isFormValid}} @showMessage={{this.showMessage}} />
                            </div>
                        </div>
                        <div class="form-group ">
                            <div class=" col-sm-12">
                                <button type="submit" name="save" class="btn btn-lg btn-primary btn-block" value="">
                                    Login
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{{outlet}}

<BrowserError />